<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
       http://www.springframework.org/schema/context
       http://www.springframework.org/schema/context/spring-context.xsd">

    <context:annotation-config/>

    <bean id="analytics-engine" class="org.eduze.fyp.impl.AnalyticsEngineImpl">
        <property name="configurationManager" ref="configuration-manager"/>
        <property name="mapProcessor" ref="map-processor"/>
        <property name="cameraCoordinator" ref="camera-coordinator"/>
    </bean>

    <!-- Analytics Engine UI -->
    <!--<bean id="analytics-engine-ui" class="org.eduze.fyp.ui.App">-->
    <!--<property name="analyticsEngine" ref="analytics-engine"/>-->
    <!--</bean>-->

    <bean id="configuration-manager" class="org.eduze.fyp.impl.ConfigurationManagerImpl">
        <property name="propertiesFile" value="analytics.properties"/>
    </bean>

    <bean id="map-processor" class="org.eduze.fyp.impl.MapProcessorImpl">
        <property name="cameraCoordinator" ref="camera-coordinator"/>
        <property name="mapListeners">
            <set>
                <ref bean="db-handler"/>
            </set>
        </property>
    </bean>

    <bean id="camera-coordinator" class="org.eduze.fyp.impl.CentralizedCameraCoordinator">
        <constructor-arg ref="configuration-manager"/>
        <property name="mapProcessor" ref="map-processor"/>
    </bean>

    <!-- Database related area -->
    <bean id="db-handler" class="org.eduze.fyp.impl.db.DBHandler">
        <property name="personDAO" ref="personDAO"/>
    </bean>

    <bean id="dataSource" class="org.springframework.jdbc.datasource.SimpleDriverDataSource">
        <constructor-arg>
            <bean class="com.mysql.jdbc.Driver"/>
        </constructor-arg>
        <constructor-arg value="jdbc:mysql://localhost:3306/analytics"/>
        <constructor-arg value="root"/>
        <constructor-arg value="root"/>
    </bean>

    <bean id="hibernateAnnotatedSessionFactory" class="org.springframework.orm.hibernate4.LocalSessionFactoryBean">
        <property name="dataSource" ref="dataSource"/>
        <property name="annotatedClasses">
            <list>
                <value>org.eduze.fyp.impl.db.model.Person</value>
            </list>
        </property>
        <property name="hibernateProperties">
            <props>
                <prop key="hibernate.dialect">org.hibernate.dialect.MySQL55Dialect</prop>
                <prop key="hibernate.current_session_context_class">thread</prop>
                <prop key="hibernate.show_sql">false</prop>
                <prop key="hibernate.hbm2ddl.auto">create</prop>
            </props>
        </property>
    </bean>

    <bean id="personDAO" class="org.eduze.fyp.impl.db.dao.PersonDAOImpl">
        <property name="sessionFactory" ref="hibernateAnnotatedSessionFactory"/>
    </bean>

    <!-- ============================================================================ -->
    <!--                    REST Server related configuration                         -->
    <!-- ============================================================================ -->
    <bean id="rest-server" class="org.eduze.fyp.rest.RestServer">
        <property name="controllers">
            <set>
                <ref bean="config-controller"/>
            </set>
        </property>
    </bean>

    <bean id="config-controller" class="org.eduze.fyp.rest.controllers.ConfigController">
        <property name="configService">
            <bean class="org.eduze.fyp.rest.services.ConfigService"/>
        </property>
    </bean>

</beans>