<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
       http://www.springframework.org/schema/context
       http://www.springframework.org/schema/context/spring-context.xsd">

    <context:annotation-config/>

    <bean id="analytics-engine" class="org.eduze.fyp.core.AnalyticsEngineImpl">
        <property name="configurationManager" ref="configuration-manager"/>
        <property name="mapProcessor" ref="map-processor"/>
        <property name="cameraCoordinator" ref="camera-coordinator"/>
    </bean>

    <bean id="configuration-manager" class="org.eduze.fyp.core.ConfigurationManagerImpl">
        <property name="propertiesFile" value="etc/analytics.properties"/>
        <property name="zoneDAO" ref="zoneDAO"/>
        <property name="cameraConfigDAO" ref="cameraConfigDAO"/>
    </bean>

    <bean id="map-processor" class="org.eduze.fyp.core.MapProcessorImpl">
        <property name="configurationManager" ref="configuration-manager"/>
        <property name="cameraCoordinator" ref="camera-coordinator"/>
        <property name="mapListeners">
            <set>
                <ref bean="db-handler"/>
                <ref bean="analytics-service"/>
            </set>
        </property>
        <property name="zonePersistentScanCount" value="5"/>
        <property name="zonePersistentThreshold" value="4"/>
    </bean>

    <bean id="camera-coordinator" class="org.eduze.fyp.core.CentralizedCameraCoordinator">
        <constructor-arg ref="configuration-manager"/>
        <property name="useClock" value="false"/>
        <property name="intervalMs" value="1000"/>
        <property name="mapProcessor" ref="map-processor"/>
    </bean>

    <!-- ============================================================================ -->
    <!--                    Database Related Configuration                            -->
    <!-- ============================================================================ -->
    <bean id="db-handler" class="org.eduze.fyp.core.db.DBHandler">
        <property name="personDAO" ref="personDAO"/>
        <property name="zoneDAO" ref="zoneDAO"/>
    </bean>

    <bean id="dataSource" class="org.springframework.jdbc.datasource.SimpleDriverDataSource">
        <constructor-arg>
            <bean class="com.mysql.jdbc.Driver"/>
        </constructor-arg>
        <constructor-arg value="#{ systemProperties['db.jdbc.url']}"/>
        <constructor-arg value="#{ systemProperties['db.user']}"/>
        <constructor-arg value="#{ systemProperties['db.password']}"/>
    </bean>

    <bean id="hibernateAnnotatedSessionFactory" class="org.springframework.orm.hibernate5.LocalSessionFactoryBean">
        <property name="dataSource" ref="dataSource"/>
        <property name="annotatedClasses">
            <list>
                <value>org.eduze.fyp.api.model.Person</value>
                <value>org.eduze.fyp.api.model.Zone</value>
                <value>org.eduze.fyp.api.model.CaptureStamp</value>
                <value>org.eduze.fyp.api.model.PointMapping</value>
                <value>org.eduze.fyp.api.model.CameraConfig</value>
                <value>org.eduze.fyp.api.model.CameraGroup</value>
            </list>
        </property>
        <property name="hibernateProperties">
            <props>
                <prop key="hibernate.dialect">org.hibernate.dialect.MySQL55Dialect</prop>
                <prop key="hibernate.current_session_context_class">thread</prop>
                <prop key="hibernate.show_sql">false</prop>
                <prop key="hibernate.hbm2ddl.auto">update</prop>
            </props>
        </property>
    </bean>

    <bean id="personDAO" class="org.eduze.fyp.core.db.dao.PersonDAOImpl">
        <property name="sessionFactory" ref="hibernateAnnotatedSessionFactory"/>
    </bean>

    <bean id="captureStampDAO" class="org.eduze.fyp.core.db.dao.CaptureStampDAOImpl">
        <property name="sessionFactory" ref="hibernateAnnotatedSessionFactory"/>
    </bean>

    <bean id="zoneDAO" class="org.eduze.fyp.core.db.dao.ZoneDAOImpl">
        <property name="sessionFactory" ref="hibernateAnnotatedSessionFactory"/>
    </bean>

    <bean id="cameraConfigDAO" class="org.eduze.fyp.core.db.dao.CameraConfigDAOImpl">
        <property name="sessionFactory" ref="hibernateAnnotatedSessionFactory"/>
    </bean>

    <!-- ============================================================================ -->
    <!--                    REST Server related configuration                         -->
    <!-- ============================================================================ -->
    <bean id="rest-server" class="org.eduze.fyp.web.RestServer">
        <constructor-arg value="false"/>
        <property name="controllers">
            <set>
                <ref bean="config-controller"/>
                <ref bean="analytics-controller"/>
            </set>
        </property>
    </bean>

    <!-- Config Controller -->
    <bean id="config-controller" class="org.eduze.fyp.web.controllers.ConfigController">
        <property name="configService" ref="configService"/>
    </bean>

    <!-- Analytics Controller -->
    <bean id="analytics-controller" class="org.eduze.fyp.web.controllers.AnalyticsController">
        <constructor-arg ref="analytics-service"/>
        <property name="reIDSearchService" ref="reID-search-service"/>
        <property name="directionAnalyticsService" ref="direction-analytics-service"/>
    </bean>

    <bean id="configService" class="org.eduze.fyp.web.services.ConfigService">
        <property name="zoneDAO" ref="zoneDAO"/>
        <property name="cameraConfigDAO" ref="cameraConfigDAO"/>
    </bean>

    <bean id="direction-analytics-service" class="org.eduze.fyp.web.services.DirectionAnalyticsService">
        <constructor-arg ref="personDAO"/>
        <constructor-arg ref="captureStampDAO"/>
    </bean>

    <bean id="analytics-service" class="org.eduze.fyp.web.services.AnalyticsService">
        <property name="personDAO" ref="personDAO"/>
        <property name="zoneDAO" ref="zoneDAO"/>
        <property name="cameraConfigDAO" ref="cameraConfigDAO"/>
        <property name="captureStampDAO" ref="captureStampDAO"/>
        <property name="configurationManager" ref="configuration-manager"/>
    </bean>

    <bean id="reID-search-service" class="org.eduze.fyp.web.services.ReIDSearchService">
        <constructor-arg value="CRAMP_re_id"/>
        <property name="personDAO" ref="personDAO"/>
    </bean>

</beans>